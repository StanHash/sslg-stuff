
KEY_BIT_DPAD_RIGHT    equ 0
KEY_BIT_DPAD_LEFT     equ 1
KEY_BIT_DPAD_UP       equ 2
KEY_BIT_DPAD_DOWN     equ 3
KEY_BIT_BUTTON_A      equ 4
KEY_BIT_BUTTON_B      equ 5
KEY_BIT_BUTTON_SELECT equ 6
KEY_BIT_BUTTON_START  equ 7

KEY_DPAD_RIGHT    equ 1 << KEY_BIT_DPAD_RIGHT
KEY_DPAD_LEFT     equ 1 << KEY_BIT_DPAD_LEFT
KEY_DPAD_UP       equ 1 << KEY_BIT_DPAD_UP
KEY_DPAD_DOWN     equ 1 << KEY_BIT_DPAD_DOWN
KEY_BUTTON_A      equ 1 << KEY_BIT_BUTTON_A
KEY_BUTTON_B      equ 1 << KEY_BIT_BUTTON_B
KEY_BUTTON_SELECT equ 1 << KEY_BIT_BUTTON_SELECT
KEY_BUTTON_START  equ 1 << KEY_BIT_BUTTON_START

KEY_DPAD_ANY      equ KEY_DPAD_RIGHT | KEY_DPAD_LEFT | KEY_DPAD_UP | KEY_DPAD_DOWN
KEY_BUTTON_ANY    equ KEY_BUTTON_A | KEY_BUTTON_B | KEY_BUTTON_SELECT | KEY_BUTTON_START
